<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.6" client="site" method="upgrade">
	<name>J51_ImageHover</name>
	<author>Joomla51</author>
	<creationDate>May 2016</creationDate>
	<copyright>Copyright (C) 2017 Joomla51</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@joomla51.com</authorEmail>
	<authorUrl>http://www.joomla51.com</authorUrl>
	<version>1.0</version>
	<description><![CDATA[<link href="../modules/mod_j51imagehover/media/css/admin.css" rel="stylesheet" type="text/css" media="all" /><div class="moduleinfo">
<p>
	Imagehover.css Module by Joomla51
</p>
<p><a class="btn" style="margin-right:10px;" target="_blank" href="http://www.joomla51.com/">Joomla51</a><a class="btn btn-primary" target="_blank" href="https://joomla51.com/joomla-templates">Joomla51 Templates</a></p>
</div>
  ]]></description>

	<files>
		<filename module="mod_j51imagehover">mod_j51imagehover.php</filename>
		<filename>mod_j51imagehover.xml</filename>
		<filename>helper.php</filename>
		<filename>License.txt</filename>		
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>elements</folder>
		<folder>language</folder>
	</files>
	
	<media folder="media" destination="mod_j51imagehover">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>less</folder>
	</media>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_j51imagehover.ini</language>
	</languages>

	<config>	
		<fields name="params">

			<fieldset name="MOD_J51_GENERALSETTINGS">
				<field name="j51_image_width" type="list" default="4" label="MOD_J51_IMAGE_WIDTH" description="MOD_J51_IMAGE_WIDTH_DESC">
					<option value="100%">1 Column</option>
					<option value="50%">2 Column</option>
					<option value="33.333%">3 Column</option>
					<option value="25%">4 Column</option>
					<option value="20%">5 Column</option>
					<option value="16.666%">6 Column</option>
					<option value="14.286%">7 Column</option>
					<option value="12.5%">8 Column</option>
					<option value="11.111%">9 Column</option>
					<option value="10%">10 Column</option>
				</field>
				<field name="j51_image_width_tabl" type="list" default="3" label="MOD_J51_IMAGE_WIDTH_TABL" description="MOD_J51_IMAGE_WIDTH_TABL_DESC">
					<option value="100%">1 Column</option>
					<option value="50%">2 Column</option>
					<option value="33.333%">3 Column</option>
					<option value="25%">4 Column</option>
					<option value="20%">5 Column</option>
					<option value="16.666%">6 Column</option>
					<option value="14.286%">7 Column</option>
					<option value="12.5%">8 Column</option>
					<option value="11.111%">9 Column</option>
					<option value="10%">10 Column</option>
				</field>
				<field name="j51_image_width_tabp" type="list" default="3" label="MOD_J51_IMAGE_WIDTH_TABP" description="MOD_J51_IMAGE_WIDTH_TABP_DESC">
					<option value="100%">1 Column</option>
					<option value="50%">2 Column</option>
					<option value="33.333%">3 Column</option>
					<option value="25%">4 Column</option>
					<option value="20%">5 Column</option>
					<option value="16.666%">6 Column</option>
					<option value="14.286%">7 Column</option>
					<option value="12.5%">8 Column</option>
					<option value="11.111%">9 Column</option>
					<option value="10%">10 Column</option>
				</field>
				<field name="j51_image_width_mobl" type="list" default="2" label="MOD_J51_IMAGE_WIDTH_MOBL" description="MOD_J51_IMAGE_WIDTH_MOBL_DESC">
					<option value="100%">1 Column</option>
					<option value="50%">2 Column</option>
					<option value="33.333%">3 Column</option>
					<option value="25%">4 Column</option>
					<option value="20%">5 Column</option>
					<option value="16.666%">6 Column</option>
					<option value="14.286%">7 Column</option>
					<option value="12.5%">8 Column</option>
					<option value="11.111%">9 Column</option>
					<option value="10%">10 Column</option>
				</field>
				<field name="j51_image_width_mobp" type="list" default="1" label="MOD_J51_IMAGE_WIDTH_MOBP" description="MOD_J51_IMAGE_WIDTH_MOBP_DESC">
					<option value="100%">1 Column</option>
					<option value="50%">2 Column</option>
					<option value="33.333%">3 Column</option>
					<option value="25%">4 Column</option>
					<option value="20%">5 Column</option>
					<option value="16.666%">6 Column</option>
					<option value="14.286%">7 Column</option>
					<option value="12.5%">8 Column</option>
					<option value="11.111%">9 Column</option>
					<option value="10%">10 Column</option>
				</field>
				<field name="j51_image_margin_x" type="textpx" default="10" label="MOD_J51_IMAGE_MARGINH" description="MOD_J51_IMAGE_MARGINH_DESC" />
				<field name="j51_image_margin_y" type="textpx" default="10" label="MOD_J51_IMAGE_MARGINV" description="MOD_J51_IMAGE_MARGINV_DESC" />	
				<field name="j51_overlay_color" type="color" default="#135796" label="MOD_J51_OVERLAYCOLOR" description="MOD_J51_OVERLAYCOLOR_DESC" />	
				<field name="j51_title_color" type="color" default="#ffffff" label="MOD_J51_TITLECOLOR" description="MOD_J51_TITLECOLOR_DESC" />
				<field name="j51_text_color" type="color" default="#ffffff" label="MOD_J51_TEXTCOLOR" description="MOD_J51_TEXTCOLOR_DESC" />	
				<field name="j51_text_align" type="list" default="center" label="MOD_J51_IMAGETEXT_ALIGN" description="MOD_J51_IMAGETEXT_ALIGN_DESC">
					<option value="left">Left</option>
					<option value="center">Center</option>
					<option value="right">Right</option>
				</field>
				<field name="j51_text_vert_align" type="list" default="center" label="MOD_J51_IMAGETEXT_ALIGN" description="MOD_J51_IMAGETEXT_ALIGN_DESC">
					<option value="flex-start">Top</option>
					<option value="center">Center</option>
					<option value="flex-end">Bottom</option>
				</field>
				<field name="j51_image_padding_x" type="textpx" default="20" label="MOD_J51_IMAGE_PADDINGH" description="MOD_J51_IMAGE_PADDINGH_DESC" />
				<field name="j51_image_padding_y" type="textpx" default="20" label="MOD_J51_IMAGE_PADDINGV" description="MOD_J51_IMAGE_PADDINGV_DESC" />
				<field name="j51_target_url" type="radio" default="_self" label="MOD_J51_URLTARGET" description="MOD_J51_URLTARGET_DESC"
				checked="checked"
				class="btn-group">
					<option value="_self">JNO</option>
					<option value="_blank">JYES</option>
				</field>
			</fieldset>

			<fieldset name="IMAGES">
				<field label="IMAGEHOVER_INFO" type="spacer" class="alert alert-grey"/>
				<field name="imagehover_images" type="subform" formsource="modules/mod_j51imagehover/field/image.xml" class="advancedSelect" min="1" max="50" multiple="true" layout="joomla.form.field.subform.repeatable" groupByFieldset="true" label="Image(s)" description="Add image(s) to display in gallery" />
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
